<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.clockhandsdetection091.activities.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/lytCol">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#rows: "/>
        <EditText
            android:id="@+id/txtRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="6"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lytCol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#columns: "/>
        <EditText
            android:id="@+id/txtCol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="14"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnStartCalibration"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@color/grey"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:text="@string/start_calibration"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
